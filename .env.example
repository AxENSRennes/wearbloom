# Local development environment variables
# Copy this file to .env and fill in your values

# PostgreSQL connection (docker-compose default)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wearbloom

# Server configuration
PORT=3000

# Image storage directory (filesystem path for user photos)
IMAGES_DIR=/data/images

# Authentication
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here-minimum-32-characters-long
# Apple bundle identifier (from app.config.ts / Apple Developer Portal)
APPLE_BUNDLE_ID=com.axel.wearbloom

# Free credits granted to new users (default: 3)
FREE_CREDITS_COUNT=3

# Apple IAP (StoreKit 2 Server API)
# Get from App Store Connect > Users and Access > Integrations > In-App Purchase
APPLE_IAP_KEY_ID=
APPLE_IAP_ISSUER_ID=
APPLE_IAP_KEY_PATH=./certs/SubscriptionKey.p8
# Apple App ID (numeric, from App Store Connect > App Information)
# APPLE_APP_ID=

# Replicate API Token (for background removal â€” optional for dev)
REPLICATE_API_TOKEN=
